{
    "title": "Course Schema",
    "description": "Describes a Blackboard course.",
    "version": 1,
    "disableKeyCompression": false,
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "primary": true
        },
        "externalId": {
            "type": "string",
            "default": ""
        },
        "courseId": {
            "type": "string",
            "default": ""
        },
        "name": {
            "type": "string",
            "default": ""
        },
        "description": {
            "type": "string",
            "default": ""
        },
        "created": {
            "type": "string",
            "default": ""
        },
        "termId": {
            "type": "string",
            "default": ""
        },
        "availability": {
            "type": "object",
            "properties": {
                "available": {
                    "type": "string"
                },
                "duration": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        },
                        "start": {
                            "type": "string"
                        },
                        "end": {
                            "type": "string"
                        },
                        "daysOfUse": {
                            "type": "number"
                        }        
                    }
                }   
            }
        }
    }
}